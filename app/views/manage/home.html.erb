<% @books.each do |book| %>
<div class="col-md-3">
  
  <% if book.taken %>

    <div class="panel panel-danger">
  
  <% else %>

    <div class="panel panel-success">
  
  <% end %>    
      <div class="panel-heading"><%= book.title %></div>
      <%= link_to(book) do %>
      
        <div class="panel-body">
        
        <p>
        <%= book.author %></p>
      
      </div>
      <% end %>
    </div>
    </div>
    <% end %>

<br>


<% if user_signed_in? %>
  <%= link_to 'New Book', new_book_path %>
<% end %>