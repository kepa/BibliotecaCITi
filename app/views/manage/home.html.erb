

<table class="table table-striped ">
     
    <thead>
        <tr>
          <th>Título</th>
          <th>Autor</th>
          <th>Alugado?</th>
        </tr>
      </thead>

      <tbody>
        
        <% @books.each do |book| %>
        <tr>
          <td><%= link_to book.title, book %></td>
          <td><%= book.author %></td>
          <% if book.taken %>    
            <td class="statusBar"><a class="alert alert-danger status"> Alugado!</a></td>
          <% else %>
              <td class="statusBar"><a class="alert alert-success status"> Disponível! </a></td>
             </div>
          <% end %> 
          <% if user_signed_in? %>
            <td><%= link_to "Apagar?", book, method: :delete, data: { confirm: 'Tem certeza?' }, :class => "btn btn-danger" %></td>
          <% end %>
            
        </tr>
        <% end %>
      </tbody>
</table>

    

<br>


<% if user_signed_in? %>
  <%= link_to 'Novo Livro', new_book_path, :class => "btn btn-default" %>
<% end %>