<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "erro") %> proíbiram este livro de ser salvo:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, "Título" %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :author, "Autor" %><br>
    <%= f.text_field :author %>
  </div>
  <%= f.hidden_field :taken, :value => false %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
