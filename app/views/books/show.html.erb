<div class="col-md-12">
  <% if @book.taken %>

    <div class="panel panel-danger">
  
  <% else %>

    <div class="panel panel-success">
  
  <% end %> 
    <div class="panel-heading"><h3><%= @book.title %></h3></div>

    <div class="panel-body">
    <p>
      <strong>Autor:</strong>
      <%= @book.author %>
    </p>
    </div>
  
  </div>
  </div>  

  <div class="col-md-12">
    <div class="panel panel-primary">
      <div class="panel-heading">Alugueis deste livro:</div>
      <div class="panel-body">
          <% if @book.taken? %>
          	
          	<% @book.rents.each do |rent| %>

          		<p><%= rent.name %></p>
              <p><%= rent.due_date.strftime("%d / %m / %Y")  %></p>
              <p><%= link_to 'Devolver o livro',[@book, rent], method: :delete, data: { confirm: 'Tem certeza?' } %></p>

          	<% end %>
          <% else %>
            
            <p>Nenhum!</p>
            <%= link_to 'Alugar este livro', new_book_rent_path(@book), :class => "btn btn-success" %>

          <% end %>
          
    </div> 	
   </div> 
  </div>  


<% if user_signed_in? %>
  <%= link_to 'Editar', edit_book_path(@book), :class => "btn btn-default" %> 
<% end %> 
<%= link_to 'Voltar', root_path, :class => "btn btn-default" %> 

