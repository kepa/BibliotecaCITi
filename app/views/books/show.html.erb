<div class="col-md-12">
  <% if @book.taken %>

    <div class="panel panel-danger">
  
  <% else %>

    <div class="panel panel-success">
  
  <% end %> 
    <div class="panel-heading"><%= @book.title %></div>

    <div class="panel-body">
    <p>
      <strong>Autor:</strong>
      <%= @book.author %>
    </p>
    </div>
  
  </div>
  </div>  

  <div class="col-md-12">
    <div class="panel panel-primary">
      <div class="panel-heading">Alugueis deste livro:</div>
      <div class="panel-body">
          <% if @book.rents != nil %>
          	
          	<% @book.rents.each do |rent| %>

          		<p><%= rent.name %></p>
              <p><%= rent.due_date.strftime("%d / %m / %Y")  %></p>
              <p><%= link_to 'Devolver o livro',[@book, rent], method: :delete, data: { confirm: 'Tem certeza?' } %></p>

          	<% end %>
          <% elsif @books.rents.empty? %>
            
            <p>Nenhum!</p>

          <% end %>
    </div> 	
   </div> 
  </div>  


<% if user_signed_in? %>
  <%= link_to 'Edit', edit_book_path(@book) %> |
<% end %> 
<%= link_to 'Back', root_path %> |
<%= link_to 'Alugar este livro', new_book_rent_path(@book) %>
